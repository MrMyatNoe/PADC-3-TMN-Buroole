<?xml version="1.0" encoding="utf-8"?>
<com.myanmar.tmn.buroole.viewItems.ImageInBurppleItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">-->

    <ImageView
        android:id="@+id/img_burpple_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".8"
        android:src="@drawable/img_fast_food"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_feature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="48dp"
            android:background="@drawable/btn_round_corners_radius_16dp"
            android:padding="8dp"
            android:text="Feature"
            android:textColor="@color/white_full" />

        <TextView
            android:id="@+id/tv_ad_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:lineSpacingMultiplier="1.3"
            android:text="Open Now"
            android:textColor="@color/white_full"
            android:textSize="32sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_ad_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:lineSpacingMultiplier="1.3"
            android:text="Savourworld puts 20 restaurants"
            android:textColor="@color/white_full"
            android:textSize="20sp"
            android:textStyle="italic" />
    </LinearLayout>

    <!--</FrameLayout>-->

</com.myanmar.tmn.buroole.viewItems.ImageInBurppleItem>