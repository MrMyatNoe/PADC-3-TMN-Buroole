<android.support.v7.widget.CardView android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/img_burger"
            android:id="@+id/img_burpple_guide_background"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:padding="8dp"
            android:alpha=".8"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_gravity="center">

            <ImageView
                android:background="@drawable/img_burger"
                android:id="@+id/img_burpple_guide_inside"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_official_trailer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="food"
                android:textColor="@color/white_full"
                android:layout_gravity="center"/>
        </LinearLayout>

    </FrameLayout>
</android.support.v7.widget.CardView>