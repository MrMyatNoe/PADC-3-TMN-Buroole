<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_new_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Newly opened"
            android:textColor="@color/accent"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"/>

        <LinearLayout
            android:id="@+id/ll_new_trending_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_new_title"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/iv_news_trending_meal_one"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/img_burger" />

                <TextView
                    android:id="@+id/tv_new_trending_shop_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:text="Sushi Kimura"
                    android:textColor="@color/black_full" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/iv_new_trending_meal_two"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/img_burger" />

                <TextView
                    android:id="@+id/tv_new_trending_shop_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:text="Sushi Kimura"
                    android:textColor="@color/black_full" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/iv_new_trending_meal_three"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/img_burger" />

                <TextView
                    android:id="@+id/tv_new_trending_shop_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:text="Sushi Kimura"
                    android:textColor="@color/black_full" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/divider_new_trending"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ll_new_trending_detail"
            android:layout_marginTop="8dp"
            android:background="@color/divider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_new_title"
            android:layout_below="@id/divider_new_trending"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Explore"
            android:textAllCaps="true"
            android:textColor="@color/black_full" />

    </RelativeLayout>
</android.support.v7.widget.CardView>